{
  "compilerOptions": {
    "target": "es5",
    "module": "ESNEXT",
    "strict": true,
    "moduleResolution": "node",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "node_modules/@types",
      "types/"
    ]
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
